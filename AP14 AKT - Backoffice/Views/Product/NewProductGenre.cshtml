@model WebShopLib.Models.Genre

@{
    ViewData["Title"] = "NewProductGenre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NewProductGenre</h1>

<h4>Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewProductGenreProc" asp-controller="Product">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (TempData.ContainsKey("GenreFlag"))
            {
                <div class="alert-danger">@TempData["GenreFlag"]</div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="GenreList">Back to List</a>
</div>

