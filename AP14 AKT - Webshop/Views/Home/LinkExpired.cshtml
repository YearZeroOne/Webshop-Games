

@{
    ViewData["Title"] = "LinkExpired";
}

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
        @* Without "Html.Raw" German characters are not displayed correctly  *@
                alert('@Html.Raw(TempData["Message"])');
        };
    </script>
}


<form action="/User/Login">
    <div class="container d-flex align-items-center justify-content-center">
        <div class="col-md-8">

            <a href="~/User/Login" class="btn btn-danger form-group" style="width: 100%; margin-bottom:60px; margin-top:20px">Zurück zur Anmeldung</a>

        </div>
    </div>

</form>