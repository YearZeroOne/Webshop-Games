

@{
    ViewData["Title"] = "ForgotPasswordCustomer";
}

<style>
    .container {
        height: 100%;
        padding: 10%;
    }

</style>


@*
    https://getbootstrap.com/docs/4.0/components/forms/
    https://stackoverflow.com/questions/40002198/how-to-center-div-with-col-md-6
    https://stackoverflow.com/questions/69250686/how-to-centre-a-div-in-bootstrap-5
*@


<form method="post" action="/Home/ForgotPasswordCustomerProc">
    <div class="container d-flex align-items-center justify-content-center">
        <div class="col-md-6">
            <h4>Passwort zurücksetzen</h4>

            <label for="email">E-Mail Addresse:</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="E-Mail eingeben" required>
            <br />

            <button type="submit" class="btn btn-danger form-group" style="width: 100%;  margin-bottom: 15px">Senden</button>


            <a href="~/Home/Index" class="btn btn-outline-danger form-group" style="width: 100%">Abbrechen</a>



        </div>
    </div>


</form>