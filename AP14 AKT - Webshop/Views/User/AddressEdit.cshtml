@model WebShopLib.Models.Address

<div class="container">


    @*the form for editing an address is displayed*@
    <h1>Adresse bearbeiten</h1>
    <form asp-controller="User" asp-action="UpdateWholeAddress" method="post">
        <input type="hidden" asp-for="CustomerId" />
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="AddressLine">Vorname:</label>
            <input type="text" asp-for="FirstName" class="form-control" required minlength="1" maxlength="200" />
            <span asp-validation-for="AddressLine" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AddressLine">Nachname:</label>
            <input type="text" asp-for="LastName" class="form-control" required minlength="1" maxlength="200" />
            <span asp-validation-for="AddressLine" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AddressLine">Adresse:</label>
            <input type="text" asp-for="AddressLine" class="form-control" required minlength="1" maxlength="400" />
            <span asp-validation-for="AddressLine" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City">Stadt:</label>
            <input type="text" asp-for="City" class="form-control" required minlength="1" maxlength="100" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Zipcode">Postleitzahl:</label>
            <input type="text" asp-for="Zipcode" class="form-control" required />
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Country">Land:</label>
            <input type="text" asp-for="Country" class="form-control" required minlength="1" maxlength="100" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" asp-for="IsBillingAddress" class="form-check-input" />
                <label class="form-check-label" asp-for="IsBillingAddress">Rechnungsadresse:</label>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" name="@Html.NameFor(model => model.IsDeliveryAddress)" value="true" checked="@Model.IsDeliveryAddress.GetValueOrDefault()" class="form-check-input" />
                <input type="hidden" name="@Html.NameFor(model => model.IsDeliveryAddress)" value="false" />
                <label class="form-check-label" asp-for="IsDeliveryAddress">Lieferadresse:</label>
            </div>
        </div>

        @*the new datas can be sent to the method to get stored in the database*@
        <button type="submit" class="btn btn-danger">Aktualisieren</button>
    </form>
</div>
